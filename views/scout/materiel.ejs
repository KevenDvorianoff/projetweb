<!DOCTYPE html>
<html>
  <head>
    <title>Materiel</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous" />
  </head>
  <body>
    <a href="/scout/deconnexion">
      <button class="btn btn-danger" type="button">
          Deconnexion
      </button>
    </a>
    <h1>Materiel</h1>
    <p>Welcome to Materiel</p>
    <% if (locals.alert) { %>
        <div class="alert alert-<%= locals.alert.type %>" role="alert">
            <%= locals.alert.text %>
        </div>
      <% } %>
      <% if (locals.norequest) { %>
            <%= locals.norequest.text %>
      <% } %>
      <% if (locals.results) { %>
        <% results.forEach(element => { %>
          <%= element.NomMateriel %>
          <%= element.NomType_M %>
          <%= element.Quantite %>
          <form method="POST" action="/scout/materiel/less/<%= element.IdMateriel %>?_method=PUT">
            <button class="btn btn-danger" type="input">
                -
            </button>
          </form>
          <form method="POST" action="/scout/materiel/more/<%= element.IdMateriel %>?_method=PUT">
            <button class="btn btn-danger" type="input">
                +
            </button>
          </form>
        <% }) %>
      <% } %>
      <a href="/scout/patrouille">
        <button class="btn btn-danger" type="button">
            Retour
        </button>
      </a>
  </body>
</html>