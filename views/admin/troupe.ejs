<!DOCTYPE html>
<html>
  <head>
    <title>Troupe</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous" />
  </head>
  <body>
    <a href="/admin/deconnexion">
      <button class="btn btn-danger" type="button">
          Deconnexion
      </button>
    </a>
    <h1>Troupe</h1>
    <p>Welcome to Troupe</p>
    <% if (locals.alert) { %>
      <div class="alert alert-<%= locals.alert.type %>" role="alert">
          <%= locals.alert.text %>
      </div>
    <% } %>
    <% if (locals.norequest) { %>
          <%= locals.norequest.text %>
    <% } %>
    <% if (locals.results) { %>
      <% results.forEach(element => { %>
        <%= element.NomTroupe %>
        <form method="POST" action="/admin/troupe/delete/<%= element.NomTroupe %>?_method=DELETE">
          <button class="btn btn-danger" type="input">
              Supprimer
          </button>
        </form>
      <% }) %>
    <% } %>
    <a href="/admin/demande">
        <button type="button">
            Demande
        </button>
      </a>
  </body>
</html>