<%- include('../navbarAdmin') %>

    <main>
        <div class="affichage">
            <h2 class="text-center titrepage">Demandes</h2>
            <% if (locals.alert) { %>
                <div class="alert alert-<%= locals.alert.type %> alert-dismissible fade show" role="alert">
                    <%= locals.alert.text %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            <% } %>
            <div class="table-responsive text-center tableaffichage">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Nom de la troupe</th>
                            <th>Num√©ro de carte</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (locals.norequest) { %>
                            <tr>
                                <td><%= locals.norequest.text %></td>
                                <td></td>
                            </tr>
                        <% } %>
                        <% if (locals.results) { %>
                            <% results.forEach(element => { %>
                                <tr>
                                    <td><%= element.NomTroupe %></td>
                                    <td><%= element.NumCarte %></td>
                                    <td>
                                        <form class="aligner" method="POST" action="/admin/demande/accept/<%= element.NumCarte %>">
                                            <button class="btn btn-success taillebouton" type="input">Accepter</button>
                                        </form>
                                        <form class="aligner" method="POST" action="/admin/demande/delete/<%= element.NumCarte %>?_method=DELETE">
                                            <button class="btn btn-danger taillebouton" type="input">Supprimer</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %> 
                        <% } %>   
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</body>

</html>